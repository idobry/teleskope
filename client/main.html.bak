                <div class="slice">
                    <div class="bar"></div>
                    <div class="fill"></div>
                </div>
            </div>
            <br><br>
        </div>
        <div class="deployment center">
            <span id="deploy_name">N/A</span>
        </div>
        <div class="containers center" data-type="containers">
            Containers: <span id="container_name">N/A</span>
            <span id="container_image">N/A</span>
        </div>
    </template>`

